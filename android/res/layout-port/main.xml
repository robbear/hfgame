<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Calls:" />
	        <TextView
	            android:id="@+id/main_numcalls_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Longitude:" />
	        <TextView
	            android:id="@+id/main_longitude_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Latitude:" />
	        <TextView
	            android:id="@+id/main_latitude_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Altitude:" />
	        <TextView
	            android:id="@+id/main_altitude_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Accuracy:" />
	        <TextView
	            android:id="@+id/main_accuracy_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Date:" />
	        <TextView
	            android:id="@+id/main_date_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
    </LinearLayout>            
    <FrameLayout
      android:id="@+id/main_fragment_container"
      android:layout_margin="5dp"
      android:layout_width="fill_parent" 
      android:layout_height="fill_parent"
      android:layout_weight="2">
    	<RelativeLayout
	      android:layout_margin="5dp"
	      android:layout_width="fill_parent" 
	      android:layout_height="fill_parent"
	      android:layout_weight="3">   
          <fragment class="com.hyperfine.hfgame.UI.fragments.CheckinFragment" 
            android:id="@+id/checkin_fragment"  
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
	      </fragment>
	      <ImageView
	    	android:id="@+id/powered_by_google" 
		    android:src="@drawable/powered_by_google_on_white"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true">
	      </ImageView>
		  <fragment class="com.hyperfine.hfgame.UI.fragments.PlaceListFragment"
		    android:id="@+id/list_fragment"
		    android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:layout_below="@id/checkin_fragment"
	        android:layout_above="@id/powered_by_google"
		  />
	    </RelativeLayout>
    </FrameLayout>
</LinearLayout>
