<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Calls:" />
	        <TextView
	            android:id="@+id/main_numcalls_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Saved:" />
	        <TextView
	            android:id="@+id/main_saved_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Longitude:" />
	        <TextView
	            android:id="@+id/main_longitude_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Latitude:" />
	        <TextView
	            android:id="@+id/main_latitude_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Altitude:" />
	        <TextView
	            android:id="@+id/main_altitude_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Accuracy:" />
	        <TextView
	            android:id="@+id/main_accuracy_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Date:" />
	        <TextView
	            android:id="@+id/main_date_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="0" />
	    </LinearLayout>
    </LinearLayout>            
</LinearLayout>
